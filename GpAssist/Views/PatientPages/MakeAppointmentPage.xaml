<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GpAssist.Views.PatientPages.MakeAppointmentPage"
             BackgroundColor="#F9F9F9">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="My Appointments" 
                     Clicked="OnMyAppointmentsClicked"
                     IconImageSource="selectall.png"/>

        <ToolbarItem Text="Logout" 
                     Clicked="OnLogoutCliked"
                     IconImageSource="logout.png"/>
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="Center">

            <Label Text="Book an Appointment ðŸ©º" 
                   FontSize="28" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center"
                   TextColor="#333" />

            <Frame HasShadow="False" BorderColor="#DDD" CornerRadius="12" Padding="15" BackgroundColor="White">
                <VerticalStackLayout Spacing="15">

                    <Label Text="Select Doctor" TextColor="#666" FontSize="14" />
                    <Picker x:Name="DoctorPicker" 
                            Title="Choose your doctor" 
                            BackgroundColor="#FFF" 
                            TextColor="#333"
                             />

                    <Label Text="Select Date" TextColor="#666" FontSize="14" />
                    <DatePicker x:Name="AppointmentDatePicker" 
                                MinimumDate="{Binding TodayDate}" 
                                BackgroundColor="#FFF" 
                                TextColor="#333"
                                Margin="0,0,0,10" />

                    <Label Text="Select Time" TextColor="#666" FontSize="14" />
                    <TimePicker x:Name="AppointmentTimePicker" 
                                BackgroundColor="#FFF" 
                                TextColor="#333"
                                Margin="0,0,0,10" />

                    <Label Text="Notes" TextColor="#666" FontSize="14" />
                    <Editor x:Name="NotesEditor" 
                            Placeholder="Any notes for the doctor?" 
                            HeightRequest="80" 
                            BackgroundColor="#FFF" 
                            TextColor="#333" 
                            />

                </VerticalStackLayout>
            </Frame>

            <Button x:Name="OnScheduleAppointment" 
                    Text="Schedule Appointment" 
                    Clicked="OnScheduledAppointmentClicked"
                    BackgroundColor="#4CAF50" 
                    TextColor="White" 
                    CornerRadius="8" 
                    HeightRequest="50" 
                    FontAttributes="Bold" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
