<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GpAssist.Views.StaffPages.StaffDashboardPage"
             BackgroundColor="#F9F9F9"
             Title="StaffDashboardPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="All Appointments"
                     Clicked="OnAllAppointmentsClicked"
                     IconImageSource="selectall.png"/>
        <ToolbarItem Text="Logout"
                     IconImageSource="logout.png"
                     Clicked="OnLogoutClicked"/>
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="Auto,*"
          Padding="20">

        <VerticalStackLayout Spacing="5">
            <Label Text="Upcoming Appointments"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#333"/>
            <Label Text="Next 7 Days"
                   FontSize="16"
                   HorizontalOptions="Center"
                   TextColor="#555"/>
            <Image Source="upcommingappointments.png"
                   HeightRequest="200"
                   HorizontalOptions="Center"/>
        </VerticalStackLayout>

        <CollectionView x:Name="AppointmentsCollectionView"
                        Grid.Row="1"
                        Margin="0,20,0,0"
                        EmptyView="No upcoming appointments found">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,0,0,10"
                           Padding="15"
                           CornerRadius="12"
                           BorderColor="#DDD"
                           BackgroundColor="White"
                           HasShadow="True">

                        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto"
                              ColumnDefinitions="*,Auto"
                              RowSpacing="5">

                            <Label Text="{Binding DoctorName}"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="#2196F3"/>

                            <Label Grid.Row="1"                                  
                                   Text="{Binding PatientName, StringFormat='Patient: {0}'}"
                                   FontSize="14"
                                   TextColor="#444"/>

                            <Label Grid.Row="2"                                                                     
                                   Text="{Binding PatientAge, StringFormat='Age: {0}'}"
                                   FontSize="14"
                                   TextColor="#444"/>

                            <Label Grid.Row="3"
                                   Text="{Binding AppointmentDate, StringFormat='{0:dddd, MMMM d, yyyy}'}"
                                   FontSize="13"
                                   TextColor="#666"/>

                            <Label Grid.Row="4"
                                   Text="{Binding AppointmentTime, StringFormat='{0:h:mm tt}'}"
                                   FontSize="13"
                                   TextColor="#666"/>

                            <Label Grid.Row="5"
                                   Text="{Binding Status, StringFormat='{0}'}" 
                                   TextColor="{Binding StatusColor}"
                                   FontSize="14"
                                   FontAttributes="Bold"/>

                            <VerticalStackLayout Grid.Column="1"
                                                 Grid.RowSpan="6"
                                                 VerticalOptions="Center"
                                                 Spacing="8">

                                <Button Text="Edit"
                                        CommandParameter="{Binding Id}"
                                        Clicked="OnEditAppointmentClicked"
                                        BackgroundColor="#FFC107"
                                        TextColor="White"
                                        CornerRadius="8"
                                        WidthRequest="70"
                                        HeightRequest="35"
                                        FontAttributes="Bold"/>

                                <Button Text="Cancel"
                                        CommandParameter="{Binding Id}"
                                        Clicked="OnCancelAppointmentClicked"
                                        BackgroundColor="#F44336"
                                        TextColor="White"
                                        CornerRadius="8"
                                        WidthRequest="70"
                                        HeightRequest="35"
                                        FontAttributes="Bold"/>
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
