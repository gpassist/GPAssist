<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GpAssist.Views.StaffPages.AllAppointmentsPage"
             BackgroundColor="#F9F9F9">

    <Grid RowDefinitions="Auto,Auto,*"
          Padding="20">

        <Label Text="All Appointments"
               FontSize="28"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="#333"
               Margin="0,-30,0,0"/>

        <Image Source="allappointments.svg"               
               WidthRequest="250"
               HorizontalOptions="Center"
               Margin="0,20,0,0"/>

        <StackLayout Grid.Row="1"
                     Orientation="Horizontal"
                     Margin="0,20,0,0"
                     Spacing="10"
                     Padding="0">
            <Label Text="Filter by Status:"
                   VerticalOptions="Center"
                   FontSize="14"
                   TextColor="#555"/>
            <Picker x:Name="StatusPicker"
                    SelectedIndexChanged="OnStatusChanged"
                    WidthRequest="150"
                    SelectedIndex="0">
                <Picker.Items>
                    <x:String>All</x:String>
                    <x:String>Scheduled</x:String>
                    <x:String>Completed</x:String>
                    <x:String>Cancelled</x:String>
                </Picker.Items>
            </Picker>
        </StackLayout>

        <CollectionView x:Name="AppointmentsCollectionView"
                        Grid.Row="2"
                        Margin="0,20,0,0"
                        EmptyView="No appointments found">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,0,0,10"
                           Padding="15"
                           CornerRadius="12"
                           BorderColor="#DDD"
                           BackgroundColor="White"
                           HasShadow="True">

                        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" 
                              ColumnDefinitions="*,Auto">

                            <Label Text="{Binding DoctorName}"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="#2196F3"/>

                            <Label Grid.Row="1"
                                   Text="{Binding PatientName}"
                                   FontSize="14"
                                   TextColor="#444"/>

                            <Label Grid.Row="2"
                                   Text="{Binding AppointmentDate, StringFormat='{0:dddd, MMMM d, yyyy}'}"
                                   FontSize="13"
                                   TextColor="#666"/>

                            <Label Grid.Row="3"
                                   Text="{Binding AppointmentDate, StringFormat='{0:h:mm tt}'}"
                                   FontSize="13"
                                   TextColor="#666"/>

                            <Label Grid.Row="4"
                                   Text="{Binding Status}" 
                                   TextColor="{Binding StatusColor}"
                                   FontSize="14"
                                   FontAttributes="Bold"/>

                            <VerticalStackLayout Grid.Column="1" Grid.RowSpan="5" VerticalOptions="Center" Spacing="8">
                                <Button Text="Edit"
                                        Clicked="OnEditAppointmentClicked"
                                        CommandParameter="{Binding Id}"
                                        BackgroundColor="#FFC107"
                                        TextColor="White"
                                        CornerRadius="8"
                                        WidthRequest="70"
                                        HeightRequest="35"
                                        FontAttributes="Bold"/>

                                <Button Text="Delete"
                                        Clicked="OnDeleteAppointmentClicked"
                                        CommandParameter="{Binding Id}"
                                        BackgroundColor="#F44336"
                                        TextColor="White"
                                        CornerRadius="8"
                                        WidthRequest="70"
                                        HeightRequest="35"
                                        FontAttributes="Bold"/>
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
