<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GpAssist.Views.Auth.LoginPage"
             BackgroundColor="#F9F9F9">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30" VerticalOptions="Center">

            <Label Text="Welcome Back ðŸ‘‹" 
                   FontSize="28" 
                   HorizontalOptions="Center" 
                   TextColor="#333" 
                   FontAttributes="Bold" />

            <Image Source="login.svg" 
                   WidthRequest="200" 
                   HorizontalOptions="Center" />

            <Frame HasShadow="False" BorderColor="#DDD" CornerRadius="12" Padding="10">
                <VerticalStackLayout Spacing="10">

                    <Label Text="Username" TextColor="#666" FontSize="14"/>
                    <Entry x:Name="UsernameEntry" 
                           Placeholder="Enter your username"
                           BackgroundColor="#FFF" 
                           TextColor="#333" 
                            />

                    <Label Text="Password" TextColor="#666" FontSize="14"/>
                    <Entry x:Name="PasswordEntry" 
                           Placeholder="Enter your password" 
                           IsPassword="True"
                           BackgroundColor="#FFF" 
                           TextColor="#333" 
                            />

                </VerticalStackLayout>
            </Frame>

            <Button Text="Login" 
                    Clicked="LoginButton_Clicked" 
                    x:Name="LoginButton"
                    BackgroundColor="#2196F3" 
                    TextColor="White" 
                    CornerRadius="8"
                    HeightRequest="50"
                    FontAttributes="Bold" />

            <HorizontalStackLayout HorizontalOptions="Center">
                <Label Text="Don't have an account?" TextColor="#666" />
                <Label Text=" Sign Up" TextColor="#2196F3" FontAttributes="Bold">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
